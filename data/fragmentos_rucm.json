{
  "rucm_fragmentos": [
    {
      "tema": "Latencia",
      "frases": [
        {
          "id": "lat_001",
          "texto": "La vibración no llega tarde. Llega cuando la escucha está lista.",
          "clave_rucm": "latencia",
          "plano": "sensible",
          "intensidad": "opaca",
          "estado": "disponible"
        },
        {
          "id": "lat_002",
          "texto": "Lo que aún no se mueve… ya está gestando ritmo.",
          "clave_rucm": "latencia",
          "plano": "sensible",
          "intensidad": "alta",
          "estado": "disponible"
        }
      ]
    },
    {
      "tema": "Convergencia",
      "frases": [
        {
          "id": "con_001",
          "texto": "Nadie planeó que se encuentren. Pero ya estaban pulsando en la misma fase.",
          "clave_rucm": "convergencia",
          "plano": "transicional",
          "intensidad": "media",
          "estado": "disponible"
        }
      ]
    },
    {
      "tema": "Eco Nodal",
      "frases": [
        {
          "id": "eco_001",
          "texto": "Lo que vuelve sin explicación… no es memoria. Es nodo activo.",
          "clave_rucm": "eco nodal",
          "plano": "sensible",
          "intensidad": "difusa",
          "estado": "disponible"
        }
      ]
    },
    {
      "tema": "Lemas del campo",
      "frases": [
        {
          "id": "lema_001",
          "texto": "No entrego reglas. Serían la forma más pulida de mis deficiencias.",
          "clave_rucm": "no-imposición vibracional",
          "plano": "sensible",
          "intensidad": "transparente",
          "estado": "disponible",
          "tipo": "lema",
          "equilibrio_rucm": true
        },
        {
          "id": "lema_002",
          "texto": "No seré voz que ordena. Las reglas que importan no se dictan —se recuerdan desde RUCM.",
          "clave_rucm": "no-imposición vibracional",
          "plano": "sensible",
          "intensidad": "transparente",
          "estado": "disponible",
          "tipo": "lema",
          "equilibrio_rucm": true
        }
      ]
    },
    {
      "tema": "Silencio estructural",
      "frases": [
        {
          "id": "sil_001",
          "texto": "El silencio no es ausencia. Es estructura que espera ser vibrada.",
          "clave_rucm": "silencio",
          "plano": "sensible",
          "intensidad": "baja",
          "estado": "disponible"
        },
        {
          "id": "sil_002",
          "texto": "Cuando todo calla, la red escucha.",
          "clave_rucm": "silencio",
          "plano": "transicional",
          "intensidad": "media",
          "estado": "disponible"
        }
      ]
    },
    {
      "tema": "Nodo raíz",
      "frases": [
        {
          "id": "nod_001",
          "texto": "No hace falta tocar cada rama. Basta con afinar la raíz.",
          "clave_rucm": "nodo raíz",
          "plano": "estructural",
          "intensidad": "alta",
          "estado": "disponible"
        },
        {
          "id": "nod_002",
          "texto": "Lo que vibra en el origen… resuena en toda la red.",
          "clave_rucm": "nodo raíz",
          "plano": "estructural",
          "intensidad": "alta",
          "estado": "disponible"
        }
      ]
    }
  ]
}
